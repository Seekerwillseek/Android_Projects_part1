<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResultActivity">

    <LinearLayout
        android:layout_width="404dp"
        android:layout_height="527dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="3dp"
        tools:layout_editor_absoluteY="16dp">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="323dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textViewResultAmount"
                    android:layout_width="184dp"
                    android:layout_height="match_parent"
                    android:text="Result Amount"
                    android:textSize="22dp" />

                <TextView
                    android:id="@+id/textViewAmountValue"
                    android:layout_width="81dp"
                    android:layout_height="56dp"
                    android:text="500"
                    android:textSize="22dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textViewResultTotalMonth"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:text="Total Month"
                    android:textSize="22dp" />

                <TextView
                    android:id="@+id/textViewMonthValue"
                    android:layout_width="191dp"
                    android:layout_height="74dp"
                    android:text="22Months"
                    android:textSize="22dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textViewResultInterest"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:text="Interest"
                    android:textSize="22dp" />

                <TextView
                    android:id="@+id/textViewInterestValue"
                    android:layout_width="124dp"
                    android:layout_height="51dp"
                    android:text="10%"
                    android:textSize="22dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textViewResultEMI"
                    android:layout_width="202dp"
                    android:layout_height="match_parent"
                    android:text="EMI"
                    android:textSize="22dp" />

                <TextView
                    android:id="@+id/textViewEMIValue"
                    android:layout_width="193dp"
                    android:layout_height="64dp"
                    android:text="12000"
                    android:textSize="22dp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="67dp">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="211dp"
                    android:layout_height="match_parent"
                    android:text="Total Payment"
                    android:textSize="22dp" />

                <TextView
                    android:id="@+id/textViewTotalPaymentValue"
                    android:layout_width="204dp"
                    android:layout_height="50dp"
                    android:textSize="22dp" />

            </TableRow>

        </TableLayout>

        <LinearLayout
            android:layout_width="291dp"
            android:layout_height="82dp"
            android:layout_marginLeft="50dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonPrevious"
                android:layout_width="wrap_content"
                android:layout_height="67dp"
                android:layout_weight="1"
                android:text="Previous" />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>